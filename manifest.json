{
  "name": "Human2Cat",
  "description": "Translate any text to cat language on the fly in your browser!",
  "version": "1.0",

  "icons": {
	  "128": "logo.png"
	},

  "manifest_version": 2,
  "permissions": ["contextMenus"],

  "content_scripts": [{
    "js": [ "picoModal.min.js", "script.js"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
	  "LaunchAutoViaKeyboard": {
	    "suggested_key": {
	      "default": "Alt+T"
	    },
      "description": "Launch Cat2Human"
	  }
	}
}
